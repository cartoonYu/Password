<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <EditText
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:id="@+id/newPasswordAccount"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号"
        android:textSize="16sp"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/newPasswordAccount"
        android:layout_alignBaseline="@id/newPasswordAccount"
        android:paddingRight="30dp" />
    <EditText
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_above="@id/newPasswordAccount"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:id="@+id/newPasswordDescription"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="描述"
        android:textSize="16sp"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/newPasswordDescription"
        android:layout_alignBaseline="@id/newPasswordDescription"
        android:paddingRight="30dp" />
    <EditText
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/newPasswordAccount"
        android:layout_marginTop="30dp"
        android:id="@+id/newPasswordPassword" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/newPasswordPassword"
        android:text="密码"
        android:textSize="16sp"
        android:layout_toLeftOf="@id/newPasswordPassword"
        android:paddingRight="30dp"/>
</RelativeLayout>