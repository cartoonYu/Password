<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="#7B7B7B"
    android:id="@+id/toolbar">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbarback"
            android:layout_centerVertical="true"
            android:id="@+id/toolbarBack"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_toRightOf="@id/toolbarBack"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/toolbarTag"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:id="@+id/toolbarTool1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/toolbarTool1"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:id="@+id/toolbarTool2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/toolbarTool2"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:id="@+id/toolbarTool3"/>
    </RelativeLayout>
</android.support.v7.widget.Toolbar>